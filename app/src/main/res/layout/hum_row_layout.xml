<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">


    <ImageButton
        android:id="@+id/play_record_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:elevation="6dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/play_button_icon" />

    <TextView
        android:id="@+id/hum_name_textView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/play_record_button"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/hum_name_text"
        android:textAppearance="@style/record_time_textStyle"/>

    <ImageView
        android:id="@+id/listeners_imageView"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/hum_name_textView"
        app:srcCompat="@drawable/friends_image" />

    <TextView
        android:id="@+id/num_of_listeners_textView"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/listeners_imageView"
        android:layout_below="@id/listeners_imageView"
        android:text="@string/num_of_listeners_text"
        android:gravity="center"
        android:textAppearance="@style/num_of_listeners_textStyle"/>

    <ImageView
        android:id="@+id/hum_answered_imageView"
        android:layout_width="@dimen/hum_answered_dimen"
        android:layout_height="@dimen/hum_answered_dimen"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/hum_answered_right_margin"
        android:layout_marginTop="@dimen/hum_answered_top_margin"
        android:background="@color/transparent"
        app:srcCompat="@drawable/answered_hum_image" />

    <TextView
        android:id="@+id/hum_answered_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hum_answered_imageView"
        android:layout_alignParentRight="true"
        android:text="@string/hum_answered_text"
        android:textAppearance="@style/num_of_listeners_textStyle"/>

    <TextView
        android:id="@+id/hum_length_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hum_row_length"
        android:textAppearance="@style/record_time_textStyle"
        android:layout_alignStart="@id/hum_name_textView"
        android:layout_below="@id/hum_name_textView"/>


</RelativeLayout>