<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">


    <ImageButton
        android:id="@+id/play_record_button"
        android:layout_width="@dimen/play_record_width"
        android:layout_height="@dimen/play_record_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/play_record_button_left_margin"
        android:layout_marginRight="@dimen/play_record_button_right_margin"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/play_button_icon" />

    <TextView
        android:id="@+id/hum_name_textView"
        android:layout_width="@dimen/hum_name_width"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/play_record_button"
        android:layout_marginLeft="@dimen/hum_name_left_margin"
        android:layout_marginRight="@dimen/hum_name_right_margin"
        android:layout_marginTop="@dimen/hum_name_top_margin"
        android:text="@string/hum_name_text"
        android:textAppearance="@style/record_time_textStyle"/>


    <ImageView
        android:id="@+id/hum_answered_imageView"
        android:layout_width="@dimen/hum_answered_dimen"
        android:layout_height="@dimen/hum_answered_dimen"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/hum_answered_right_margin"
        android:layout_marginTop="@dimen/hum_answered_top_margin"
        android:background="@color/transparent"
        app:srcCompat="@drawable/answered_hum_image" />

    <TextView
        android:id="@+id/hum_answered_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hum_answered_imageView"
        android:layout_alignParentRight="true"
        android:text="@string/hum_answered_text"
        android:textAppearance="@style/num_of_listeners_textStyle"/>

    <TextView
        android:id="@+id/hum_length_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hum_row_length"
        android:textAppearance="@style/record_time_textStyle"
        android:layout_alignStart="@id/hum_name_textView"
        android:layout_below="@id/hum_name_textView"/>

</RelativeLayout>